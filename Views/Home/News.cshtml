
@{
    ViewData["Title"] = "News";
}
<title>News</title>
<body>
    <h1><strong>What's Happening Here</strong></h1>
    <br />
    <br />

    <!--News Carousel-->

    <div class="row">
        <div class="col-12">

            <!--Carousel Setup-->

            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                    <!--Carousel slide 3-->
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Images/Carousel/NewsCarousel/Fakevideo1.png" alt="First slide">
                    </div>

                    <!--Carousel slide 2-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/Carousel/NewsCarousel/fake video 2.png" alt="Second slide">
                    </div>

                    <!--Carousel Slide 3-->
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Images/Carousel/NewsCarousel/fake video 3.png" alt="Third slide">
                    </div>
                </div>

                <!--Carousel controls-->
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <br />
    <br />
    <hr />

    <!--Tables-->
    <div class="row">
        <!--Announcements Column Section-->
        <div class="col">
            <div class="card">
                <div class="card-body text-dark">
                    <h5 class="card-title"><strong>Announcements</strong></h5>
                    <p class="card-text">Announcement 1</p>
                    <p class="card-text">Announcement 2</p>
                    <p class="card-text">Announcement 3</p>
                    <a href="#" class="btn btn-danger">Announcements</a>
                </div>
            </div>
        </div>

        <!--News Feed Section  Column-->

        <div class="col">
            <div class="card">
                <div class="card-body text-dark">
                    <h5 class="card-title"><strong>Newsfeed</strong></h5>
                    <p class="card-text">In todays news................</p>
                    <p class="card-text">New Research Initiative................</p>
                    <p class="card-text">Federal Grant................</p>
                    <a href="#" class=" btn btn-danger">Subscribe to our UofL Innovation Newsletter  </a>
                </div>
            </div>
        </div>

        <!--Social Media-->
        <div class="col">
            <div class="card">
                <div class="card-body text-dark">
                    <h5 class="card-title"><strong>Social Media</strong> </h5>
                    <p class="card-text">Twitter</p>
                    <p class="card-text">Facebook</p>
                    <p class="card-text">Instagram</p>
                    <a href="#" class="btn btn-primary">Subscribe to our Twitter feed today</a>
                </div>
            </div>
        </div>
    </div>





</body>

